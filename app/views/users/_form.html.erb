<%= form_with(model: user, local: true) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user_charity from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8">
        	<div class="panel panel-default">
        		<div class="panel-heading">
              <h3 class="panel-title">Signup to Pass the Hat </h3>
			 			</div>
            <div class="panel-body">
                  <div class="form-group row">
                    <label for="first_name" class="col-sm-5 col-form-label">First Name</label>
                    <div class="col-sm-7">
                      <%= f.text_field :first_name, class: 'form-control' %>
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="last_name" class="col-sm-5 col-form-label">Last Name</label>
                    <div class="col-sm-7">
                      <%= f.text_field :last_name, class: 'form-control' %>
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="email" class="col-sm-5 col-form-label">Email</label>
                    <div class="col-sm-7">
                      <%= f.text_field :email, class: 'form-control' %>
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="password" class="col-sm-5 col-form-label">Password</label>
                    <div class="col-sm-7">
                      <%= f.text_field :password, class: 'form-control' %>
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="password_confirmation" class="col-sm-5 col-form-label">Confirm Password</label>
                    <div class="col-sm-7">
                      <%= f.text_field :password_confirmation, class: 'form-control' %>
                    </div>
                  </div>

                    <div class="field form-group">
                      <%= f.submit "Submit", :class => "btn btn-info btn-block" %>
                    </div>

                  </div>
                </div>
              </div>

                </div>
			    </div>
	    	</div>
    	</div>
    </div>
  </div>

<% end %>
